<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.danielpape.EMOM.MainActivity"
    android:id="@+id/activity_mainOptions">

    <android.support.v7.widget.CardView
        android:id="@+id/EMOMCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="EMOM Workout"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionBar.Title.Inverse"
                android:textSize="32dp"
                tools:text="EMOM Workout" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:layout_marginTop="16dp"
                android:text="Perform excerise for a set period every minute on the minute. e.g. 40 seconds of work followed by 20 seconds of rest"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                android:textColor="@color/cardview_light_background" />

            <Button
                android:id="@+id/button4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:backgroundTint="@color/colorAccent"
                android:onClick="tapEMOMButton"
                android:text="Choose EMOM"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:textSize="16dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/EMOMCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tabata Workout"

                android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionMode.Title.Inverse"
                android:textSize="32dp"
                tools:text="Tabata Workout" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:layout_marginTop="16dp"
                android:text="Perform exercise in a set interval of 20 seconds work then 10 seconds rest"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                android:textColor="@color/cardview_light_background"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:backgroundTint="@color/colorAccent"
                android:text="Choose Tabata"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:textSize="16dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>